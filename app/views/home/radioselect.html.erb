<div class ="scroll choose-a-station">
	<h2 class = "orange-text"> Choose a Station!</h2>
	<p><b>Where are you?</b></p>
</div>

<div class = "radios">
	<!--Below is the form for RAdio Buttons -->
	<%= form_tag("/home/yourbuses", method: "get") do  %>
	<%= label_tag(:station, "")  %>
	<br>
	<%  @stations.each do |station|  %>
	  <!-- Loop through the array-->
	  <%= radio_button_tag(:station, station) %><%= station %><br>
	  <%  end  %>
	  <%= submit_tag 'Check for buses!', :class => 'btn submit-button'  %>
	  <%  end  %>
	</div>
